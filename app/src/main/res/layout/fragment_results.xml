<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please use the following toggles to hide and show markers."
        android:textStyle="bold|italic"
        android:background="@color/colorYellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( composite )"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPDComposite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( dist + pref )"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPDDistPref1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" Page Rank"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPageRank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( pop + dist )"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPopDist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( pref )"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPref1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( composite + Page Rank)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPDCompositePageRank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" PD ( dist + pref + Page Rank)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbPDDistPrefPageRank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" K - Medoids"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbK_Medoids1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" DisC"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbDisC1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" Random Selection"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif" />

        <ToggleButton
            android:id="@+id/tbRandomSelection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:checked="true"
            />

    </LinearLayout>


</LinearLayout>